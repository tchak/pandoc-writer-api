{
  "name": "pandown-api",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=test tap --jobs=1 test/**/*.test.ts",
    "start": "yarn build:ts && fastify start -l info dist/app.js",
    "routes": "yarn build:ts && fastify routes dist/app.js",
    "build:ts": "tsc",
    "lint": "eslint . --ext .ts",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"fastify start -w -l info -P dist/app.js\"",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback --all",
    "migrate:rollback:all": "yarn migrate:rollback && yarn migrate:rollback --env test",
    "migrate:reset": "yarn migrate:rollback:all && yarn migrate --env test && yarn migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@orbit/data": "^0.17.0-beta.3",
    "diff-match-patch": "^1.0.5",
    "fastify": "^3.1.1",
    "fastify-accepts": "^2.0.1",
    "fastify-autoload": "^3.0.5",
    "fastify-cli": "^2.0.2",
    "fastify-cors": "^4.1.0",
    "fastify-helmet": "^4.0.2",
    "fastify-plugin": "^2.0.0",
    "fastify-sensible": "^3.0.1",
    "jsdom": "^16.3.0",
    "knex": "^0.21.2",
    "node-htmldiff": "^0.9.3",
    "nodejs-sh": "^0.2.0",
    "objection": "^2.2.1",
    "pg": "^8.3.0",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.32",
    "@types/jsdom": "^16.2.3",
    "@types/node": "^14.0.18",
    "@types/qs": "^6.9.3",
    "@types/tap": "^14.10.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "concurrently": "^5.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "knex-cleaner": "^1.3.0",
    "prettier": "^2.0.5",
    "tap": "^14.0.0",
    "typescript": "^3.9.7"
  }
}
