    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=test tap -b -R specy --before bin/db-cleaner.js test/**/*.test.ts",
    "start": "yarn build:ts && fastify start -l info dist/src/app.js",
    "routes": "yarn build:ts && fastify routes dist/src/app.js",
    "build:ts": "tsc",
    "lint": "eslint . --ext .ts",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"fastify start -w -l info -P dist/src/app.js\"",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "secret": "node bin/secret.js"
  },
